<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee ;http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<servlet>
		<servlet-name>ConsoleServlet</servlet-name>
		<servlet-class>es.Salesianos.servlet.ListConsolesServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ConsoleServlet</servlet-name>
		<url-pattern>console</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>VideoGamesServlet</servlet-name>
		<servlet-class>es.Salesianos.servlet.ListVideoGamesServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>VideoGamesServlet</servlet-name>
		<url-pattern>videogame</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>VideoGameDataListServlet</servlet-name>
		<servlet-class>es.Salesianos.servlet.ListVideoGamesMarkServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>VideoGameDataListServlet</servlet-name>
		<url-pattern>dataGames</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ConsoleDataListServlet</servlet-name>
		<servlet-class>es.Salesianos.servlet.ListConsolesMarkServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ConsoleDataListServlet</servlet-name>
		<url-pattern>dataConsoles</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>ConsoleRegister.jsp</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>ListVideogamesCompanyServlet</servlet-name>
		<servlet-class>es.salesianos.servlet.ListVideogamesCompanyServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ListConsolesCompanyServlet</servlet-name>
		<url-pattern>/listConsolesCompany</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ListVideogamesCompanyServlet</servlet-name>
		<servlet-class>es.salesianos.servlet.ListVideogamesCompanyServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ListVideogamesCompanyServlet</servlet-name>
		<url-pattern>/listVideogamesCompany</url-pattern>
	</servlet-mapping>


</web-app>